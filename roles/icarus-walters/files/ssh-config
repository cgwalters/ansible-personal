Host pkgs.devel.redhat.com
     PasswordAuthentication no
     GSSAPIAuthentication yes

# Work around gerrit server implementing an old sshd
Host code.engineering.redhat.com
     PasswordAuthentication no
     GSSAPIAuthentication yes
     Ciphers aes256-cbc
     MACs hmac-sha1
     KexAlgorithms diffie-hellman-group14-sha1 

Host !*.redhat.com
     GSSAPIAuthentication no

Host eventhorizon.verbum.local
     PasswordAuthentication no
     Ciphers chacha20-poly1305@openssh.com
     HostKeyAlgorithms ssh-ed25519
     KexAlgorithms curve25519-sha256@libssh.org
     MACs hmac-sha2-512-etm@openssh.com
     Protocol 2

Host olympus.verbum.local
     PasswordAuthentication no
     Ciphers chacha20-poly1305@openssh.com
     HostKeyAlgorithms ssh-ed25519
     KexAlgorithms curve25519-sha256@libssh.org
     MACs hmac-sha2-512-etm@openssh.com
     Protocol 2
     ProxyCommand ssh -q eventhorizon.verbum.local nc 10.1.10.72 %p

Host eventhorizon-irc.verbum.local
     HostName eventhorizon.verbum.local
     PasswordAuthentication no
     Ciphers chacha20-poly1305@openssh.com
     HostKeyAlgorithms ssh-ed25519
     KexAlgorithms curve25519-sha256@libssh.org
     MACs hmac-sha2-512-etm@openssh.com
     ExitOnForwardFailure yes
     LocalForward 127.0.0.1:47295 127.0.0.1:47295
     RequestTTY no

# https://stribika.github.io/2015/01/04/secure-secure-shell.html
Host github.com
     KexAlgorithms curve25519-sha256@libssh.org,diffie-hellman-group-exchange-sha256,diffie-hellman-group-exchange-sha1,diffie-hellman-group14-sha1

Host bastion.fedoraproject.org
     User walters
     ProxyCommand none
     ForwardAgent no

Host *.phx2.fedoraproject.org *.qa.fedoraproject.org 10.5.125.* 10.5.126.* 10.5.127.* *.vpn.fedoraproject.org
     User walters
     ProxyCommand ssh -W %h:%p bastion.fedoraproject.org

Host *
     # We want to use keys everywhere
     PasswordAuthentication no
     KbdInteractiveAuthentication no
     Protocol 2
     # https://stribika.github.io/2015/01/04/secure-secure-shell.html
     Ciphers chacha20-poly1305@openssh.com,aes256-gcm@openssh.com,aes128-gcm@openssh.com,aes256-ctr,aes192-ctr,aes128-ctr
     KexAlgorithms curve25519-sha256@libssh.org,diffie-hellman-group-exchange-sha256
     MACs hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com,hmac-ripemd160-etm@openssh.com,umac-128-etm@openssh.com,hmac-sha2-512,hmac-sha2-256,hmac-ripemd160,umac-128@openssh.com

